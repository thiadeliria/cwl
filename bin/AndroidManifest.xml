<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.cwl"
    android:versionCode="1"
    android:versionName="1.0" >

<!--minimum SDK version 11 to support Calendar -->
<!--TEMPORARY: minimum SDK version 14 for testing reasons -->
    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="21" />
        
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/cwl_logo_curly_circle"
        android:label="@string/app_name"
        android:theme="@style/AppBaseTheme" >
        <activity
            android:name=".LoginActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".SignUp"
            android:label="@string/sign_up_new_account" >
        </activity>
        <activity
            android:name=".HomepageActivity"
            android:label="@string/homepage" 
            android:uiOptions="splitActionBarWhenNarrow" >
        </activity>
    </application>

</manifest>
