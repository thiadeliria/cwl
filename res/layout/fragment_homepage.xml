<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical"
    android:paddingBottom="14dp"
    tools:context="com.example.cwl.HomepageActivity$PlaceholderFragment" > 

    <!-- Will link to full page of 课程计划 with calendar. -->

    <Button
        android:id="@+id/my_schedule"
        style="@style/PanelText"
        android:layout_width="match_parent"
        android:layout_height="39dp"
        android:background="@drawable/panel_button"
        android:gravity="left"
        android:paddingLeft="8dp"
        android:paddingTop="9dp"
        android:text="@string/my_schedule" />

    <HorizontalScrollView
        android:id="@+id/horizontalScrollView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="horizontal" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal" >

            <CalendarView
                android:id="@+id/calendarView1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:firstDayOfWeek="2"
                android:shownWeekCount="2" />
        </LinearLayout>
    </HorizontalScrollView>

    <!-- Will link to full page of 我的教师, each user listed. -->

    <Button
        android:id="@+id/my_teachers"
        style="@style/PanelText"
        android:layout_width="match_parent"
        android:layout_height="39dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/panel_button"
        android:gravity="left"
        android:paddingLeft="8dp"
        android:paddingTop="9dp"
        android:text="@string/my_teachers" />

    <HorizontalScrollView
        android:id="@+id/horizontalScrollView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="horizontal" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="4dp"
            android:orientation="horizontal" >

            <!-- To be button. Will link to full page of 我的收藏教师, each user listed. -->

            <Button
                android:id="@+id/teacher_button_1"
                android:layout_width="86dp"
                android:layout_height="86dp"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp" />

            <Button
                android:id="@+id/teacher_button_2"
                android:layout_width="86dp"
                android:layout_height="86dp"
                android:layout_marginRight="12dp" />
        </LinearLayout>
    </HorizontalScrollView>

    <!-- To be button. Will link to full page of 课程计划 with calendar. -->

    <Button
        android:id="@+id/my_fave_teachers"
        style="@style/PanelText"
        android:layout_width="match_parent"
        android:layout_height="39dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/panel_button"
        android:gravity="left"
        android:paddingLeft="8dp"
        android:paddingTop="9dp"
        android:text="@string/my_fave_teachers" />

    <HorizontalScrollView
        android:id="@+id/horizontalScrollView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="horizontal" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="4dp"
            android:orientation="horizontal" >

            <!-- Each button links to profile pg of selected user -->

            <Button
                android:id="@+id/fave_button_1"
                android:layout_width="86dp"
                android:layout_height="86dp"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp" />

            <Button
                android:id="@+id/fave_button_2"
                android:layout_width="86dp"
                android:layout_height="86dp"
                android:layout_marginRight="12dp" />

            <Button
                android:id="@+id/fave_button_3"
                android:layout_width="86dp"
                android:layout_height="86dp"
                android:layout_marginRight="12dp" />

            <Button
                android:id="@+id/fave_button_4"
                android:layout_width="86dp"
                android:layout_height="86dp"
                android:layout_marginRight="12dp" />
        </LinearLayout>
    </HorizontalScrollView>

</LinearLayout>