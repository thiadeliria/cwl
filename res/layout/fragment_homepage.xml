<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.cwl.HomepageActivity$PlaceholderFragment" >

    <!-- To be button. Will link to full page of 课程计划 with calendar. -->

    <TextView
        android:id="@+id/my_schedule"
        style="@style/PanelText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/my_schedule" />

    <HorizontalScrollView
        android:id="@+id/horizontalScrollView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="horizontal" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal" >

            <CalendarView
                android:id="@+id/calendarView1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:firstDayOfWeek="2"
                android:shownWeekCount="2" />
            
        </LinearLayout>
    </HorizontalScrollView>

    <!-- To be button. Will link to full page of 我的教师, each user listed. -->

    <TextView
        android:id="@+id/my_teachers"
        style="@style/PanelText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/my_teachers" />

    <HorizontalScrollView
        android:id="@+id/horizontalScrollView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="horizontal" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="4dp"
            android:orientation="horizontal" >

        <!-- To be button. Will link to full page of 我的收藏教师, each user listed. -->

            <Button
                android:id="@+id/teacher_button_1"
                android:layout_width="86dp"
                android:layout_height="86dp"
                android:layout_marginRight="12dp" />

            <Button
                android:id="@+id/teacher_button_2"
                android:layout_width="86dp"
                android:layout_height="86dp"
                android:layout_marginRight="12dp" />
        </LinearLayout>
    </HorizontalScrollView>

    <!-- To be button. Will link to full page of 课程计划 with calendar. -->

    <TextView
        android:id="@+id/my_fave_teachers"
        style="@style/PanelText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/my_fave_teachers" />

    <HorizontalScrollView
        android:id="@+id/horizontalScrollView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="horizontal" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="4dp"
            android:orientation="horizontal" >

            <!-- Each button links to profile pg of selected user -->

            <Button
                android:id="@+id/fave_button_1"
                android:layout_width="86dp"
                android:layout_height="86dp"
                android:layout_marginRight="12dp" />

            <Button
                android:id="@+id/fave_button_2"
                android:layout_width="86dp"
                android:layout_height="86dp"
                android:layout_marginRight="12dp" />

            <Button
                android:id="@+id/fave_button_3"
                android:layout_width="86dp"
                android:layout_height="86dp"
                android:layout_marginRight="12dp" />

            <Button
                android:id="@+id/fave_button_4"
                android:layout_width="86dp"
                android:layout_height="86dp"
                android:layout_marginRight="12dp" />
        </LinearLayout>
    </HorizontalScrollView>

</LinearLayout>