<?xml version="1.0" encoding="utf-8"?>

<!-- Hard-coded for now. Actual function will be implemented after Prototype. -->

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/parent_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e0e0e0"
    android:orientation="vertical"
    android:paddingTop="12dp" >

    <TextView
        android:id="@+id/panel_1_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="14dp"
        android:text="@string/account"
        android:textColor="#a0a0a0"
        android:textSize="19sp" />

    <RelativeLayout
        android:id="@+id/panel_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="7dp"
        android:background="#ffffff"
        android:clickable="true"
        android:paddingBottom="7dp"
        android:paddingLeft="14dp"
        android:paddingRight="14dp"
        android:paddingTop="7dp"
        android:textColor="#f9f9f9"
        android:textSize="15sp" >

        <TextView
            android:id="@+id/account"
            style="@style/SettingLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="6dp"
            android:text="@string/account" />

        <TextView
            android:id="@+id/account_id"
            style="@style/SettingText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/account"
            android:layout_alignParentRight="true"
            android:text="@string/account_id" />

        <TextView
            android:id="@+id/change_password"
            style="@style/SettingLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/account"
            android:layout_marginBottom="6dp"
            android:text="@string/change_password" />

        <TextView
            android:id="@+id/keep_logged_in"
            style="@style/SettingLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/change_password"
            android:layout_marginBottom="6dp"
            android:text="@string/keep_logged_in" />

        <CheckBox
            android:id="@+id/checkBox1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/keep_logged_in"
            android:checked="true" />

        <TextView
            android:id="@+id/add_phone"
            style="@style/SettingLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/keep_logged_in"
            android:layout_marginBottom="6dp"
            android:text="@string/add_phone" />

        <TextView
            android:id="@+id/phone"
            style="@style/SettingText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/add_phone"
            android:layout_alignRight="@+id/account_id"
            android:text="@string/not_verified" />

        <TextView
            android:id="@+id/add_email"
            style="@style/SettingLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/add_phone"
            android:text="@string/add_email" />

        <TextView
            android:id="@+id/email"
            style="@style/SettingText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/add_email"
            android:layout_alignRight="@+id/account_id"
            android:text="@string/not_verified" />
    </RelativeLayout>

    <TextView
        android:id="@+id/panel_2_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:text="@string/notif"
        android:textColor="#a0a0a0"
        android:textSize="19sp" />

    <RelativeLayout
        android:id="@+id/panel_2"
        android:layout_width="match_parent"
        android:layout_height="82dp"
        android:layout_marginBottom="2dp"
        android:background="#ffffff"
        android:clickable="true"
        android:padding="5dp"
        android:textColor="#f9f9f9"
        android:textSize="15sp" >
    </RelativeLayout>

    <TextView
        android:id="@+id/panel_3_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:text="@string/notif"
        android:textColor="#a0a0a0"
        android:textSize="19sp" />

    <RelativeLayout
        android:id="@+id/panel_3"
        android:layout_width="match_parent"
        android:layout_height="82dp"
        android:layout_marginBottom="2dp"
        android:background="#ffffff"
        android:clickable="true"
        android:padding="5dp"
        android:textColor="#f9f9f9"
        android:textSize="15sp" >

        <TextView
            android:id="@+id/notif_3_text"
            style="@style/NotifText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/notif_2_label"
            android:layout_below="@+id/notif_2_label"
            android:text="@string/upcoming_lesson_eg" />
    </RelativeLayout>

</LinearLayout>